
row
  .small-12-columns
    = simple_form_for quest_form do |f|
      .row
        .small-3.columns
          h3 Question
          = f.input :lesson, collection: 1..14
          = f.label :difficulty
          = f.select :difficulty, options_for_select(Question.levels)
          = f.hidden_field :quiz_id, value: quiz_id
      .row
        .small-12.columns
          = f.input :content, as: :text, label: 'Question'
      .row
        .small-12.columns
          = f.fields_for :solution do |sf|
            = sf.hidden_field :question_id, value: f.object.id
            br
            = sf.label :content, '* Solution'
            = sf.text_area :content, placeholder: 'Add Rubric'
      br
        = f.submit 'Update!', class: 'small button'