h1 Edit Profile

p * = Required fields

row
  .small-12-columns
    = simple_form_for @edit_form, url: { action: 'update' } do |f|
      .row
        .small-6.columns
          = f.input :first_name
          = f.input :last_name
          = f.input :email
          p Enter old password to confirm changes:
          = f.input :current_password, label: 'Old Password'
        .small-6.columns
          p Change password (optional):
          = f.input :password, label: 'New Password'
          = f.input :password_confirmation, label: 'Confirm Password'

      = f.submit 'Update!', class: 'small button'